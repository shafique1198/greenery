
@model greenery.Models.Plant
@{
    ViewBag.Title = "Adtocart";
}

<h2>Adtocart</h2>

<br />
<br />
<br />
<div style="background-color:lightgreen;">
    @using (@Html.BeginForm())
    {<div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <img style="min-height:200px; width:200px;" src="@Url.Content(Model.imagePath)" />
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <h1>Product Name: @Model.plant_name</h1>
                    <h2>Price: @Model.plant_price BDT</h2>
                    <h6>Guidance: @Model.guidance</h6>
                    <input type="number" name="qty" value="0" id="qty1" min="1" max="10" />
                    <input type="submit" value="Submit" class="btn btn-success" />


                </div>
            </div>
        </div>

    }
</div>

